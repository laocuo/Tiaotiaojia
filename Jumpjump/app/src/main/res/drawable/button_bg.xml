<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#3c5991" android:endColor="#2b416c"
                      android:angle="270"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#4e71b6" android:endColor="#3c5991"
                      android:angle="270"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
