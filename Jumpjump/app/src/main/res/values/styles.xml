<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="AppThemeBase.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="WelcomeTheme" parent="FullScreenTheme">
        <item name="android:background">@drawable/bg</item>
    </style>

    <style name="ProgressTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="common_btn_style">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="common_btn_style_big" parent="@style/common_btn_style">
        <item name="android:layout_width">81dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="common_btn_style_home" parent="@style/common_btn_style_big">
    </style>

    <style name="common_btn_style_game" parent="@style/common_btn_style">
    </style>

    <style name="popup_menu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Menu</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
